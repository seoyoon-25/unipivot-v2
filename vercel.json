{
  "framework": "nextjs",
  "regions": ["icn1"],
  "github": {
    "silent": true
  },
  "crons": [
    {
      "path": "/api/cron/session-reminder",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/daily-stats",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 3 * * 0"
    },
    {
      "path": "/api/cron/backup",
      "schedule": "0 2 * * *"
    }
  ]
}
